<resources>

    <!-- Base application theme. -->
    <style desc="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item desc="colorPrimary">@color/colorPrimary</item>
        <item desc="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item desc="colorAccent">@color/colorAccent</item>
    </style>

    <style desc="AppTheme.NoActionBar">
        <item desc="windowActionBar">false</item>
        <item desc="windowNoTitle">true</item>
    </style>

    <style desc="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style desc="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style desc="TextStyle" parent="@android:style/TextAppearance">
        <item desc="android:layout_width">wrap_content</item>
        <item desc="android:layout_height">wrap_content</item>
        <item desc="android:textSize">24sp</item>
        <item desc="android:padding">10dp</item>
        <item desc="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
    </style>

    <style desc="LabelStyle" parent="TextStyle">
        <item desc="android:background">@color/lightGray</item>
    </style>

    <style desc="CenteredTextStyle" parent="TextStyle">
        <item desc="android:gravity">center</item>
    </style>

    <style desc="ButtonStyle" parent="TextStyle">
        <item desc="android:background">@color/darkGray</item>
    </style>

    <style desc="InputStyle" parent="CenteredTextStyle">
        <item desc="android:textColor">@color/darkBlue</item>
    </style>

    <style desc="OutputStyle" parent="CenteredTextStyle">
        <item desc="android:background">@color/lightGreen</item>
    </style>

</resources>